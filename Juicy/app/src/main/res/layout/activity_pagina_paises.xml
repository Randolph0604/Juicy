<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PaginaPaises"
    android:orientation="vertical"
    >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@drawable/madera">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="75dp"
                android:text="Seleccione el pais de origen"

                android:textAlignment="center"
                android:textSize="25dp"
                android:gravity="center"
                android:textStyle="bold"
                android:textColor="#FFF"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout

                android:layout_width="185dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="1dp">

                <ImageView
                    android:id="@+id/paisRD"
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="20dp"
                    android:background="@drawable/banderadominicana"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="40dp"/>

                <ImageView
                    android:id="@+id/paisESPANA"
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginLeft="20dp"
                    android:scaleType="centerCrop"
                    android:background="@drawable/banderaespana"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_margin="1dp">

                <ImageView
                    android:id="@+id/paisUSA"
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/banderausa"
                    android:scaleType="centerCrop"
                    android:layout_marginBottom="40dp"/>

                <ImageView
                    android:id="@+id/paisCHINA"
                    android:layout_width="150dp"
                    android:layout_height="190dp"
                    android:layout_marginRight="20dp"
                    android:background="@drawable/banderachina"
                    android:scaleType="centerCrop"/>
            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
</LinearLayout>